{
    "name": "inviqa/uk-bank-holidays",
    "description": "gov.uk bank holidays service library",
    "type": "library",
    "authors": [
        {
            "name": "Ross Kinsman",
            "email": "ross.kinsman@inviqa.com"
        },
        {
            "name": "Benjamin Alsleben",
            "email": "benjamin.alsleben@inviqa.com"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "phpspec/phpspec": "^6.0",
        "webmozart/assert": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "": [
                "features/bootstrap",
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\": "spec/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    }
}
